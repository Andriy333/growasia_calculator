<span class="-js-input-wrapper input-wrapper">
  <%= f.hidden_field :category, value: Category::FERTILIZER %>
  <%= f.number_field :amount, value: f.object.amount || 0, min: 0, class: "-js-is-resetable" %>
  <%= f.select :addition_type, select_options(Analysis::FERTILIZER_TYPES, f.object.addition_type) %>
  <div class="options-wrapper">
    <button class="btn-reset -js-reset-analysis is-hidden" data-previous-value="<%= f.object.amount %>">
      <svg class="c-icon -small">
        <use xlink:href="#icon-reset"></use>
      </svg>
      <span class="reset-tooltip -js-reset-tooltip is-hidden">
        <p>Revert to original value: </p>
        <p><%= f.object.amount || 0 %></p>
      </span>
    </button>
    <span>
      <%= f.hidden_field :_destroy %>
      <button class="-js-remove-fields">
        <svg class="c-icon -small">
          <use xlink:href="#icon-delete"></use>
        </svg>
      </button>
    </span>
  </div>
</span>
