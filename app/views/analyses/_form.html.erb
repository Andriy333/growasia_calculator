<%= form_for(analysis) do |f| %>
  <div id="wizard">
    <%= render 'geo_location', f: f %>
    <%= render 'basic_info', f: f %>

    <%# Not RICE %>

    <%= render 'tillage', f: f %>
    <%= render 'additional_crop_management', f: f %>
    <%= render 'shade_trees', f: f %>
    <%= render 'agrochemicals', f: f %>
    <%= render 'fossil_fuels', f: f %>

    <%# RICE only Section %>

    <%= render 'analyses/rice/irrigation_regime', f: f %>
    <%= render 'analyses/rice/flooding', f: f %>
    <%= render 'analyses/rice/fertilizer_nutrients', f: f %>
    <%= render 'agrochemicals', f: f %>
    <%= render 'analyses/rice/fuel', f: f %>

    <h1>Done</h1>
    <section>
      <div class="actions">
        <%= f.submit %>
      </div>
    </section>
  </div>
<% end %>
