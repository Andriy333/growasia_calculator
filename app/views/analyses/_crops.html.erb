<h1>Liming and Dolomite</h1>
<section id="slide-6" class="l-slide -theme-6 js--slide">
  <div class="c-slide-content">
    <p class="text -questions">
      <span>
        Do you apply lime?
        <input type="checkbox" id="lime">
        <label for="lime"></label>
      </span>
      <span>
        <%= f.text_field :lime_amount, class: '-input-small' %>
        <span class="text -form-inputs -medium">kg per ha and yr</span>
      </span>
      <span>
        Do you apply dolomite?
        <input type="checkbox" id="dolomite">
        <label for="dolomite"></label>
      </span>
      <span>
        <%= f.text_field :dolomite_amount, class: '-input-small' %>
        <span class="text -form-inputs -medium">kg per ha and yr</span>
      </span>
    </p>
  </div>
</section>

<!-- SLIDE -->
<h1>Agrochemicals</h1>
<section id="slide-7" class="l-slide -theme-6 js--slide">
  <div class="c-slide-content">
    <p class="text -questions">
      <span>
        Do you apply agrochemicals </br> including fertilizers, pesticides, or herbicides?
        <input type="checkbox" id="agrochemical">
        <label for="agrochemical"></label>
      </span>
      <span>
        <%= f.text_field :agrochemical_amount, class: '-input-small' %>
        <span class="text -form-inputs -medium">kg per ha and yr</span>
      </span>
    </p>
  </div>
</section>

<!-- SLIDE -->
<h1>Fossil fuels</h1>
<section id="slide-8" class="l-slide -theme-6 js--slide">
  <div class="c-slide-content">
    <p class="text -questions">
    <span>
      Each year, we use an estimated
    </span>
    <span>
      <%= f.fields_for :fuels do |builder| %>
        <%= builder.hidden_field :category, value: Category::FUEL %>
        <%= builder.text_field :amount %>
        <%= builder.select :unit, select_options(Analysis::FUEL_UNITS) %>
    </span>
    <span>
        of
        <%= builder.select :addition_type, select_options(Analysis::FUEL_TYPES) %>
      <% end %>
    </span>
    </p>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</section>
