<div class="c-slider-step js-slider-step -active" data-crop="rice">
  <!-- <h1>Fertilizer and Nutrient Management</h1> -->
  <div class="slider-step-container -light">
    <span>
      We incorporate
    </span>
    <span>
      <%= f.fields_for :nutrient_managements do |builder| %>
        <%= builder.hidden_field :category, value: Category::NUTRIENT_MANAGEMENT %>
        <span class="c-field -little -light">
          <%= builder.number_field :amount, class: '-right -js-required -js-numeric', autocomplete: 'off', min: '0' %>
          <span class="unit">kg per ha and yr</span>
        </span>
        of
        <span class="c-field -little -light">
          <%= builder.select :addition_type, select_options(Analysis::RICE_NUTRIENT_MANAGEMENT) %>
        </span>
      <% end %>
    </span>
  </div>
</div>
