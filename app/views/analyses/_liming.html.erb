<div class="c-slider-step js-slider-step -active" data-guidance="liming">
  <!-- <h1>Liming and Dolomite</h1> -->
  <div class="slider-step-container -light">
    <span class="text -guidance -light">Please tell us about your liming practices</span>

    <div>
      <div>
        <span class="text -questions">Do you apply lime?</span>
        <span class="c-field -little -light">
          <select name="liming" id="liming" class="-js-next-step-switcher -theme-4">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
          </select>
        </span>
      </div>
      <div id="limingAmount" class="c-field -light -medium -disabled -fixed-height">
        <%= f.number_field :lime_amount, class: '-right',
          autocomplete: 'off', min: '0', placeholder: 0 %>
        <span class="unit">kg/ha/year</span>
      </div>
    </div>

    <div>
      <div>
        <span class="text -questions">Do you apply dolomite?</span>
        <span class="c-field -little -light">
          <select name="dolomite" id="dolomite" class="-js-next-step-switcher -theme-4">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
          </select>
        </span>
      </div>
      <div id="dolomiteAmount" class="c-field -light -medium -disabled -fixed-height">
        <%= f.number_field :dolomite_amount, class: '-right',
          autocomplete: 'off', min: '0', placeholder: 0 %>
        <span class="unit">kg/ha/year</span>
      </div>
    </div>

  </div>
</div>
