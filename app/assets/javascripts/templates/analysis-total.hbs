{{#if totalCompare}}
  <div class="main-figures">
    <div>
      <span class="title text -summary-small">Current practices</span>
      <p class="value text -summary-big">{{total}}</p>
    </div>
    <div>
      <span class="title text -summary-small">Potential future</span>
      <p class="value text -summary-big">{{totalCompare}}</p>
    </div>
  </div>
  <p class="text -analysis-total -bold">Introducing alternative practices would change your emissions by:</p>
  <div class="subtraction">
    <p class="value text -figure-extra-big {{subtractionClass}}">{{subtraction}}</p>
    <span class="text -units-highlighted -medium">t of CO<sub>2</sub>e per year</span>
  </div>
{{else}}
  <p class="text -analysis-total">Your current estimated emissions are:</p>
  <div class="total">
  <div class="value-box">
    <span class="value text -figure-extra-big">{{total}}</span>
  </div>
  <div class="value-unit">
    <span class="text -analysis-units">t of CO<sub>2</sub>e per year</span>
  </div>
</div>
{{/if}}

